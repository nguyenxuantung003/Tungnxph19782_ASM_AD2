<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatGPT.MainChatGPTActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewChatGPT"
        android:layout_above="@id/chatgpt_bottomlayout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/chatgpt_bottomlayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageEdittexChatGPT"
            android:layout_centerInParent="true"
            android:text="Here"
            android:padding="16dp"
            android:layout_toLeftOf="@id/btnsendChatGPT"
            android:background="@drawable/edit_text_loginactivity"
            />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnsendChatGPT"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            />
    </RelativeLayout>

</RelativeLayout>