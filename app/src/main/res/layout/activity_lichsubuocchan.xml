<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LichsubuocchanActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/progressImageViewLS"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:rotation="270"/>


    <TextView
        android:layout_gravity="center"
        android:id="@+id/steps_text_viewLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Steps: 0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:id="@+id/goal_text_viewLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Goal: 10000 steps"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/status_text_viewLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Keep going! You can do it."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

</LinearLayout>