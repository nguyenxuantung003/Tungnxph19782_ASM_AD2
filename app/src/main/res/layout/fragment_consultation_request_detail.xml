<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_request_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Request Title" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/txt_request_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_request_title_detail"
        android:textSize="16sp"
        android:text="Request Description" />

    <EditText
        android:id="@+id/edt_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_request_description_detail"
        android:layout_marginTop="16dp"
        android:hint="Nhập câu trả lời ..."
        android:background="@drawable/edit_text_loginactivity"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/btn_login_loginactivity"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/btn_send_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_response"
        android:layout_marginTop="16dp"
        android:text="Send Response" />


</RelativeLayout>