<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerCounselingField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/counseling_fields" />

    <EditText
        android:background="@drawable/edit_text_loginactivity"
        android:textSize="25sp"
        android:id="@+id/etCounselingContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerCounselingField"
        android:layout_marginTop="16dp"
        android:hint="Nội dung yêu cầu" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/btn_login_loginactivity"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/btnSendCounselingRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCounselingContent"
        android:layout_marginTop="16dp"
        android:text="Gửi yêu cầu" />

</RelativeLayout>